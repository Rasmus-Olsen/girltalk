<script>
     // Get the elements to toggle
     const openDiv = document.querySelector('.open');
    const closedDiv = document.querySelector('.closed');

    // Function to check the current time and toggle the visibility
    function toggleDivs() {
        const now = new Date();
        const hours = now.getHours();
        const minutes = now.getMinutes();

        // Check if current time is between 13:00 and 17:00
        if ((hours > 18 || (hours === 18 && minutes >= 30)) && (hours < 24)) {
            openDiv.style.display = 'flex';
            closedDiv.style.display = 'none';
        } else {
            openDiv.style.display = 'none';
            closedDiv.style.display = 'flex';
        }
    }

    // Call the function initially to set the correct visibility
    toggleDivs();

    // Update the visibility every minute
    setInterval(toggleDivs, 60000);
</script>